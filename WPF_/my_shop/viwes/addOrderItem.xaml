        </WrapPanel>
        <DataGrid Height= "100" Margin="5"></DataGrid>
        <Button Height="25" Width="50">Add</Button>
        <WrapPanel HorizontalAlignment="Center">
        <Button Height="25" Width="25" Margin="5">Quantity</Button>
            <Button Height="25" Width="25" Margin="5">Add Item</Button>
        </WrapPanel>
    </StackPanel>
