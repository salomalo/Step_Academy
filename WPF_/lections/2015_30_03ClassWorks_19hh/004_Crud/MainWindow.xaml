<Window x:Class="_004_Crud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Margin="10,10,10,0">
            <Button Name="btnAdd" Content="Add User" Click="btnAdd_Click" Margin="0,10"/>
            <Button Name="btnUpdate" Content="Update User" Click="btnUpdate_Click" Margin="0,10"/>
            <Button Name="btnDelete" Content="Delete User" Click="btnDelete_Click" Margin="0,10"/>
            
        </StackPanel>
        <ListBox Name="lbxUsers" DisplayMemberPath="Name" />
    </DockPanel>
</Window>
