<Window x:Class="_002_Force_Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <StackPanel Orientation="Horizontal" >
            <Label Content="Property value: " />
            <Label Content="{Binding Path=MyString}" Name="_lblValue" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Label Content="New Value: " />
            <TextBox Width="120" Name="_tbNewValue" />
        </StackPanel>
        
        <Button Content="Force Update"
                HorizontalAlignment="Center" Margin="0,5"
                Click="Button_Click" />
        
    </StackPanel>
</Window>
